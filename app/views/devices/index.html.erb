<h1 class='center'>rachio</h1>

<% @devices.each do |device| %>
  <div class="device" id="<%= device.id %>">
    <h4 class="center"><%= device.name %></h4>
    <div class="zones">
      <ul class="collection">
        <% device.zones.each do |zone| %>
        <li class="collection-item avatar zone" data-id="<%= zone[:id] %>">
          <img src="<%= zone[:customNozzle][:imageUrl] %>" alt="nozzle-type" class="circle">
          <span class="title"><%= zone[:name] %></span>
          <p>Area: <%= zone[:yardAreaSquareFeet] %> sq ft</p>
          <div class="secondary-content">
            <div class="minutes">
              <input min="1" max="1200" placeholder="minutes" class="water-minutes" type="number" name="start_water[minutes]" id="start-<%= zone[:id] %>">
            </div>
            <input type="button" value="Water!" class="btn water-btn">
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
